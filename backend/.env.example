# Configuração do Banco de Dados
# Substitua pelos dados do seu banco de dados local ou de produção
DATABASE_URL="mysql://USER:PASSWORD@HOST:PORT/DATABASE"

# Configuração do JWT (JSON Web Token)
# GERE UMA NOVA CHAVE SECRETA PARA CADA AMBIENTE E NÃO A COMPARTILHE
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN="7d"

# Configuração do Servidor
PORT=8080
NODE_ENV="development"

# Configuração do CORS (Cross-Origin Resource Sharing)
# Deve ser a URL do seu frontend.
CORS_ORIGIN="http://localhost:3000"

# Limite de Requisições (Rate Limiting)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuração do Bcrypt
BCRYPT_ROUNDS=12